@using Bilirkisilik_Uygulamasi.Models.Entity
@model List<TBL_BILIRKISILIK>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}


<div>
    <h2 style="margin-left: 30px; color: red">Sarf Kararı Yazılmamış Dosyalar Listesi</h2>

    @*<input type="button" value="Print" onclick="window.print()" />*@

    @*<a href="#" onclick="PrintFunction('#printdiv')" target="_blank" style="margin-left:30px;" class="btn btn-warning btn-lg"><i class="fa fa-print"></i>Listeyi Yazdır</a>*@

    <a href="~/UcretYazilmamisDefault/Yazdir1/" style="margin-left: 30px;" class="btn btn-warning">Listeyi Yazdır</a>

</div>

@*Dosya numarasına göre arama*@

@using (Html.BeginForm("Index", "UcretYazilmamisDefault", FormMethod.Get))
{
    <div style="margin-bottom: 15px; margin-top: 15px; margin-left: 30px;">
        <b>Aranacak Dosya numarasını girin : &nbsp;</b> @Html.TextBox("t")
        <input type="submit" value="Ara" />
    </div>
}


<table class="table table-bordered" style="margin-left: 30px;">
    <tr style="background: darkblue; color: white">
        <th>ID</th>
        <th>GÖNDEREN BİRİM</th>
        <th>DOSYA NO</th>
        <th>TESLİM TARİHİ</th>
        <th>RAPOR TÜRÜ</th>
        <th>BİLİRKİŞİ</th>
        <th>DOSYA NOTLARI</th>
        <th>NOT DÜZENLE</th>
        <th>ÜCRET EKLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.TBL_BIRIMLER.BIRIMAD</td>
            <td>@x.DOSYANO</td>
            <td>@Convert.ToDateTime(x.TESLIMTARIHI).ToString("dd/MM/yyyy")</td>
            <td>@x.TBL_RAPORTURU.RAPORTURU</td>
            <td>@x.TBL_BILIRKISILER.ADSOYAD</td>
            <td>@x.NOTLAR</td>
            <td><a href="~/UcretYazilmamisDefault/NotDuzenleDetayGetir/@x.ID" class="btn btn-danger">Not Düzenle</a></td>

            <td><a href="~/UcretYazilmamisDefault/DosyaDetayGetir/@x.ID" class="btn btn-success">Ücret Ekle</a></td>

        </tr>

    }

</table>

