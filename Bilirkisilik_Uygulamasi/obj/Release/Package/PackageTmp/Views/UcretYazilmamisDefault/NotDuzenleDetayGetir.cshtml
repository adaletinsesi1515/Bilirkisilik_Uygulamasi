@model Bilirkisilik_Uygulamasi.Models.Entity.TBL_BILIRKISILIK

@{
    ViewBag.Title = "NotDuzenleDetayGetir";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}

<h2>Dosyalara Not Girişi</h2>


@using (Html.BeginForm("NotDosyaGuncelle", "UcretYazilmamisDefault", FormMethod.Post))
{
    <div class="form-row">
        <div class="col-3" style="margin-top: 15px; margin-left: 30px;">
            @Html.LabelFor(k => k.ID)
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })

            <label>Gönderen Birim</label>
            @Html.DropDownListFor(k => k.TBL_BIRIMLER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        </div>
        <div style="margin-top: 15px; margin-left: 30px;">
            <label>Dosya No</label>
            @Html.TextBoxFor(k => k.DOSYANO, new { @class = "form-control" })
        </div>
       
        <div style="margin-top: 15px; margin-left: 30px;">
            <label>Dosyaya ilişkin özel notlar</label>
            @Html.TextAreaFor(k => k.NOTLAR, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <button class="btn-warning">Not Güncelle</button>
